               alert('중복 값은 불가합니다.');
           }else{
               find_skill.push($(this).text());
               $(".skill-badge").prepend(`<span class='delete_skill' data-skill_id=${$(this).text()}>${$(this).text()}</span>`);
               $('#skill').val(find_skill.join(','));
